// .vscode/launch.json
{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Program",
        "preLaunchTask": "build", // The task to run before launching the debugger
        "program": "${workspaceFolder}/trading-bot-backend/backend-server.ts",
        "outFiles": ["${workspaceFolder}/out/**/*.js"], // Path to the compiled JavaScript files
        "sourceMaps": true // Enable source maps for debugging
      }
    ]
  }
  