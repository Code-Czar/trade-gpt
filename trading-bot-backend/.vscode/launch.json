{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Nodemon Debug",
            "runtimeExecutable": "nodemon",
            "program": "${workspaceFolder}/src/backend-server.ts",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "runtimeArgs": [
                "--inspect-brk"
            ]
        }
    ]
}